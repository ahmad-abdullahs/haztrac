{{#each value}}
    <div class="square-pill">
        {{#if file_url}}
            <a href="javascript:void(0);" data-url="{{file_url}}" data-action="download">
                <span class="ellipsis-value ellipsis_inline" title="{{name}}">{{name}}</span>
                <span class="ellipsis-extra">({{file_size}})</span>
            </a>
        {{else}}
            <div rel="tooltip" title="{{str 'ERR_NO_SUCH_FILE' ../module}}">
                <span class="ellipsis-value ellipsis_inline" title="{{name}}">{{name}}</span>
                <span class="ellipsis-extra">({{file_size}})</span>
            </div>
        {{/if}}
    </div>
    {{#if linked}}
        <a name="advance-relate-link" data-id="{{id}}" class="rowaction" style="padding-right: 5px;" tabindex="-1">
            <i rel="tooltip" title="" class="fa fa-link" data-original-title="Linked To Email"></i>
        </a>
    {{else}}
        <a name="advance-relate-unlink" data-id="{{id}}" class="rowaction" style="padding-right: 5px;" tabindex="-1">
            <i rel="tooltip" title="" class="fa fa-unlink" data-original-title="Unlinked from Email"></i>
        </a>
    {{/if}}
{{/each}}
