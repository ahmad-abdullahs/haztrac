{{#if showButton}}
    <span class="detail pull-right" style="margin-top: -28px;">
        <a href="javascript:void(0)" data-uid="{{uid}}" tabindex="-1" class="btn signFile" rel="tooltip" title="{{str "Sign Doc"}}"><i class="fa fa-edit"></i></a>
        <a id="copyLinkToShare" href="javascript:void(0)" value="" tabindex="-1" class="btn copyLinkToShare" rel="tooltip" title="{{str "Copy Link To Share"}}"><i class="fa fa-copy"></i></a>
        <input type="text" value="" id="copyLinkToShareInput" style="position: absolute;left: -1000px;top: -1000px;">
        <a id="lockAnnotation" href="javascript:void(0)" value="" tabindex="-1" class="btn lockAnnotation" rel="tooltip" title="{{#if ../this.model.attributes.is_locked}}Document Locked{{else}}Document Unlocked{{/if}}">
            <i class="fa {{#if ../this.model.attributes.is_locked}}fa-lock{{else}}fa-unlock{{/if}}"></i>
        </a>
        <a href="{{../this.model.attributes.popOutFullViewLink}}" target="_blank" class="btn btn-primary" role="button" tabindex="0" name="popOutFullViewButton" style="line-height: 15px;"><i class="fa fa-external-link"></i> Full View </a>
    </span>
{{/if}}
{{#if value}}
    {{#notEq value 'http://'}}
        <iframe src="{{value}}" height="{{def.height}}" width="100%"{{#if dir}} dir="{{dir}}"{{/if}}></iframe>
    {{/notEq}}
{{/if}}
