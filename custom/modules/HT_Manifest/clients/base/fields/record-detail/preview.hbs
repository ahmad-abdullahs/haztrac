<div class="record-cell field-row" style="display: block;">
    <div class="thumbnail dashlet ui-draggable" data-type="dashlet" data-action="droppable">
        <div data-dashlet="toolbar">
            <div class="dashlet-header">
                <h4 data-toggle="dashlet" class="dashlet-title ui-draggable-handle">Record Details</h4>
            </div>
        </div>
        <div data-dashlet="dashlet" class="dashlet-content">
            <div class="list-view">
                <table class="table table-striped " style="margin-bottom: 0px;">
                    <thead>
                        <tr>
                            {{#each def.columns}}
                                <th class="cell-{{width}}" data-fieldname="{{name}}" data-orderby="" title="{{str label ../module}}">
                                    <span>{{str label ../module}}</span>
                                </th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="single">
                            {{#each columnsMeta}}
                                <td>
                                    {{field ../view model=../model template="list"}}
                                </td>
                            {{/each}}
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
