{{#if collection.dataFetched}}
    {{#eq collection.next_offset "-1"}}
        {{#unless ../collection.length}}
            <div class="block-footer">
                {{str "LBL_NO_DATA_AVAILABLE"}}
            </div>
        {{/unless}}
    {{else}}
        <div style="display: flex;">
            <button data-action="show-more" class="btn btn-link btn-invisible">{{showMoreLabel}}</button>
            {{#if showRange}}
                <button data-action="show-more-50" class="btn btn-link btn-invisible" style="padding-left: unset;">50</button>
                <button data-action="show-more-100" class="btn btn-link btn-invisible" style="padding-left: unset;">100</button>
                <button data-action="show-more-200" class="btn btn-link btn-invisible" style="padding-left: unset;">200</button>
                <button data-action="show-more-all" class="btn btn-link btn-invisible" style="padding-left: unset;">All</button>
            {{/if}}
        </div>
    {{/eq}}
{{else}}
    <div class="block-footer">
        {{loading 'LBL_ALERT_TITLE_LOADING'}}
    </div>
{{/if}}
