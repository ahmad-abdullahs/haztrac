<div class="a11y-wrapper" data-a11y="toggle" role="button" tabindex="0" aria-label="{{str 'LBL_ARIA_TOGGLE_SUBPANEL_VISIBILITY' module}}" aria-expanded="{{#if context.attributes.collapsed}}false{{else}}true{{/if}}">
    <div class="label label-module label-{{module}} pull-left" aria-hidden="true">{{moduleIconLabel module}}</div>
    <h4 class="pull-left">{{str layout.label parentModule}}</h4>
    {{#each meta.fields}}
    <span class="pull-left panel-field">
        {{field ../this model=../model}}
    </span>
    {{/each}}
</div>
<div class="subpanel-controls btn-toolbar pull-right">
    <span class="detail" tabindex="-1">
        <a href="javascript:void(0);" class="rowaction btn btn-primary" role="button" tabindex="0" name="cancel_all_button" track="click:cancel_all_button" style="width: 50px !important; display: none;">Cancel</a>
    </span>
    <span class="detail">
        <a href="javascript:void(0);" class="rowaction btn btn-primary" data-event="button:save_all_button:click" role="button" tabindex="0" name="save_all_button" track="click:save_all_button" style="width: 50px !important; display: none;">Save</a>
    </span>
    <span class="detail">
        <a href="javascript:void(0);" class="rowaction btn btn-primary" data-event="button:edit_all_button:click" role="button" tabindex="0" name="edit_all_button" track="click:edit_all_button" style="width: 60px !important;">Edit All</a>
    </span>
    {{#each meta.buttons}}
        {{field ../this}}
    {{/each}}
</div>
