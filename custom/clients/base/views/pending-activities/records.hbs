<div class="tab-pane active">
    {{#if collection.length}}
        <ul class="unstyled listed" data-action="pagination-body">
            {{#eq collection.link.name "accounts_sales_and_services_1"}}
                <table class="table table-striped dataTable" id="custom-pending-activities-table">
                    <thead>
                        <tr>
                            <th class="sorting" data-orderby="" title="On Date" style="min-width: 50px;">
                                <span>On Date</span>
                            </th>
                            <th class="sorting" data-orderby="" title="On Time" style="min-width: 50px;">
                                <span>On Time</span>
                            </th>
                            <th class="sorting" data-orderby="" title="Name" style="min-width: 130px;">
                                <span>Name</span>
                            </th>
                            <th class="sorting" data-orderby="" title="Estimated Qty" style="min-width: 50px;">
                                <span>Est. Qty</span>
                            </th>
                            <th class="sorting" data-orderby="" title="UOM" style="min-width: 50px;">
                                <span>UOM</span>
                            </th>
                            <th class="sorting" data-orderby="" title="Estimated Sale" style="min-width: 50px;">
                                <span>Est. Sale</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each collection.models}}
                            <tr class="single">
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "on_date_c"}}">
                                            {{fieldValue this "on_date_c"}}
                                        </div>
                                    </span>
                                </td>
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "on_time_c"}}">
                                            {{fieldValue this "on_time_c"}}
                                        </div>
                                    </span>
                                </td>
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "name"}}">
                                            <a href="#{{buildRoute model=this action="detail"}}">{{fieldValue this "name"}}</a>
                                        </div>
                                    </span>
                                </td>
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "estimated_rli_quantity"}}">
                                            {{fieldValue this "estimated_rli_quantity"}}
                                        </div>
                                    </span>
                                </td>
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "primary_rli_uom"}}">
                                            {{fieldValue this "primary_rli_uom"}}
                                        </div>
                                    </span>
                                </td>
                                <td>
                                    <span class="list">
                                        <div class="ellipsis_inline" data-placement="bottom" title="" data-original-title="{{fieldValue this "estimated_rli_total"}}">
                                            {{#if this.attributes.estimated_rli_total}}${{/if}}{{fieldValue this "estimated_rli_total"}}
                                        </div>
                                    </span>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                {{#each collection.models}}
                    <li>
                        <div class="pull-right">
                            {{#if ../../row_actions}}
                                {{#each ../../row_actions}}
                                    {{field ../../../this model=../this}}
                                {{/each}}
                            {{/if}}
                            {{#if attributes.invitation}}
                                {{#with ../../invitationActions}}
                                    {{field ../../../this model=../attributes.invitation template='edit'}}
                                {{/with}}
                            {{/if}}
                        </div>
                        {{#if ../overdueBadge}}
                            {{#with ../../overdueBadge}}
                                {{field ../../../this model=../../this template='detail'}}
                            {{/with}}
                        {{/if}}
                        <p class="pullLeft">
                            {{!--{{#if attributes.assigned_user_id}}
                                <a href="#{{buildRoute module="Employees" id=attributes.assigned_user_id action="detail"}}" class="pull-left avatar avatar-md" data-title="{{fieldValue this "assigned_user_name"}}">
                                    <img class="avatar hide" src="" data-src="{{fieldValue this "picture_url"}}" alt="{{fieldValue this "assigned_user_name"}}">
                                    <span class="hide">Us</span>
                                </a>
                            {{else}}
                                <span class="fa fa-stack pull-left">
                                    <i class="fa fa-user fa-stack-base"></i>
                                    <i class="fa fa-question-circle fa-light"></i>
                                </span>
                            {{/if}}--}}
                            <a href="#{{buildRoute model=this action="detail"}}">{{fieldValue this "name"}}</a>
                        </p>
                        {{!--<div class="details pullLeft">
                            {{#if attributes.assigned_user_id}}
                                <a href="#{{buildRoute module="Employees" id=attributes.assigned_user_id action="detail"}}">{{fieldValue this "assigned_user_name"}}</a>&#44;
                            {{else}}
                                {{str "LBL_UNASSIGNED" this.module}}&#44;
                            {{/if}}
                            {{relativeTime attributes.record_date class='date'}}
                        </div>--}}
                    </li>
                {{/each}}
            {{/eq}}
        </ul>
    {{else}}
        <div class="block-footer">{{#if ../collection.dataFetched}}{{str "LBL_NO_DATA_AVAILABLE" this.module}}{{else}}{{str "LBL_LOADING" this.module}}{{/if}}</div>
    {{/if}}
</div>
