{{#if collection.dataFetched}}
    {{#each meta.panels}}
        <table class="table table-striped dataTable shortHeightHeader">
            <thead>
                <tr>
                    {{#each fields}}
                        <th class="{{#isSortable ../../module this}}sorting sorting_{{#eq ../../../collection.orderBy.field name}}{{../../../../orderBy.direction}}{{/eq}} orderBy{{name}}{{/isSortable}}{{#if widthClass}} {{widthClass}}{{/if}} cell-{{width}}"
                            {{#if styles}} style="{{styles}}"{{/if}}
                            {{#if name}} data-fieldname="{{name}}"{{/if}} data-orderby="{{orderBy}}" title="{{str label ../../module}}">
                            <span>{{str label ../../module}}</span>
                        </th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each ../collection.models}}
                    <tr class="single">
                        {{#each ../fields}}
                            <td{{#if align}} class="{{align}}"{{/if}}>{{field ../../../this model=../this template=../../../viewName}}</td>
                            {{!--<td{{#if align}} class="{{align}} lowHeight" {{else}} class="lowHeight"{{/if}}>{{field ../../../this model=../this template=../../../viewName}}</td>--}}
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{/each}}
    {{#unless collection.length}}
        <div class="block-footer">
            {{str "LBL_NO_DATA_AVAILABLE"}}
        </div>
    {{/unless}}
{{/if}}
