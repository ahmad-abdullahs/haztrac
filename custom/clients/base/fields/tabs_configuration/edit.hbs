<div class="control-group {{name}} clearfix" style="margin-bottom: 5px;">
    <div class="record-label">
        {{#each def.fields}}
            <div class="span{{span}} record-cell {{css_class}}">
                <lable>{{str label ../module}}</lable>
            </div>
        {{/each}}
        <div>
            <button type="button" class="btn third pull-right" name="dragdrop" rel="tooltip" title="{{str 'LBL_HOLD_TO_DRAG' 'sales_and_services'}}" style="background: whitesmoke;" data-original-title="{{str 'LBL_HOLD_TO_DRAG' 'sales_and_services'}}"><i class="fa fa-sort-numeric-asc"></i></button>
        </div>
    </div>
</div>

<table style="width: 100%;">
    <tbody class="{{name}}-to-insert" style="border: 1px inset; background: whitesmoke;">
    </tbody>
</table>

<div class="btn-toolbar pull-right span7" style="">
    <br>
    <span class="detail">
        <a href="javascript:void(0);" class="btn btn-invisible btn-link" role="button" name="cancel_tab_config_button" tabindex="1">Cancel</a>
    </span>
    <span class="detail">
        <a href="javascript:void(0);" class="rowaction btn btn-primary" role="button" name="save_tab_config_button" tabindex="1">Save</a>
    </span>
</div>
