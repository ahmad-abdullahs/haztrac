{{#if this.def.isMultiSelect}}
    {{#if value}}
        <div class="ellipsis_inline" data-placement="bottom" {{#if ../../this.def.highlight}}style="background:{{../../this.def.backcolor}}; color:{{../../this.def.textcolor}}"{{/if}} title="{{#each value}}{{#eachOptions ../items}}{{#eq key ../this}}{{#notEq @index 0}}, {{/notEq}}{{value}}{{/eq}}{{/eachOptions}}{{/each}}">{{#each value}}{{#eachOptions ../items}}{{#eq key ../this}}{{#notEq @index 0}}, {{/notEq}}{{value}}{{/eq}}{{/eachOptions}}{{/each}}</div>
    {{/if}}
{{else}}
    {{#if value}}
        {{#eachOptions items}}
            {{#eq this.key ../value}}
                <span class="small pull-right">
                    <a href="javascript:void(0);" class="select2-result-css-{{value}} rowaction btn">
                        <i class="fa"></i>
                    </a>
                </span>
                <div class="ellipsis_inline" data-placement="bottom" {{#if ../../../../this.def.highlight}}style="background:{{../../../../this.def.backcolor}}; color:{{../../../../this.def.textcolor}}"{{/if}} title="{{value}}">
                    {{value}}
                </div>
            {{/eq}}
        {{/eachOptions}}
    {{/if}}
{{/if}}
