{{#if def.showButton}}
    <span class="small pull-right" style="margin-top: -25px;">
        <a href="javascript:void(0);" class="rowaction btn btn-warning" rel="tooltip" data-event="button:open_magnify_popup_button:click" role="button" tabindex="0" name="open_magnify_popup_button" track="click:open_magnify_popup_button" data-original-title="Magnify" style="background: darkgray;">
            <i class="fa fa-search"></i>
        </a>
    </span>
{{/if}}

<div>
    {{#if value.short}}
        {{#if collapsed}}
            {{nl2br value.short}}&hellip;
        {{else}}
            {{nl2br value.long}}
        {{/if}}
        <button data-action="toggle" class="btn btn-link btn-invisible toggle-text">
            {{#if collapsed}}
                {{str 'LBL_TEXTAREA_MORE' module}}
            {{else}}
                {{str 'LBL_TEXTAREA_LESS' module}}
            {{/if}}
        </button>
    {{else}}
        {{nl2br value.long}}
    {{/if}}
</div>